// Place your key bindings in this file to override the defaultsauto[]
[
  {
    "key": "cmd+=",
    "command": "-workbench.action.zoomIn"
  },
  {
    "key": "cmd+=",
    "command": "editor.action.fontZoomIn"
  },
  {
    "key": "cmd+-",
    "command": "editor.action.fontZoomOut"
  },
  {
    "key": "cmd+-",
    "command": "-workbench.action.zoomOut"
  },
  //
  // Navigation between panels
  //
  {
    "key": "ctrl+h",
    "command": "workbench.action.navigateLeft",
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.navigateDown",
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.navigateUp",
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.navigateRight",
    "when": "editorFocus"
  },
  //
  // File Explorer
  //
  {
    "key": "cmd+o",
    "command": "file-browser.open",
  },
  //
  // cmd+k
  //
  //   t = run single test
  //   T = run all tests
  //   c = toggle chat
  //   p = toggle problems
  //   s = toggle terminal (shell)
  //   a = switch to alternate file
  //
  {
    "key": "cmd+k t",
    "command": "workbench.action.tasks.runTask",
    "args": "Test Current Line"
  },
  {
    "key": "cmd+k shift+t",
    "command": "workbench.action.tasks.runTask",
    "args": "Test Current File"
  },
  {
    "key": "cmd+k c",
    "command": "workbench.action.chat.toggle",
    "when": "chatEditingParticipantRegistered && !chatSetupHidden && view != 'workbench.panel.chat.view.edits'"
  },
  {
    "key": "cmd+k p",
    "command": "workbench.actions.view.problems",
    "when": "workbench.panel.markers.view.active"
  },
  {
    "key": "cmd+k s",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminal.active"
  },
  {
    "key": "cmd+k a",
    "command": "alternate.alternateFile"
  },
  //
  // Problems next/prev
  {
    "key": "cmd+[",
    "command": "editor.action.marker.next",
    "when": "editorFocus"
  },
  {
    "key": "cmd+]",
    "command": "editor.action.marker.prev",
    "when": "editorFocus"
  },
  {
    "key": "shift+alt+a",
    "command": "alternate.alternateFileInSplit"
  }
]