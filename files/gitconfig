[user]
  email = milica.nerlovic@gmail.com
  name = milica-nerlovic

[push]
  default = current

[alias]
  a     = add
  all   = add -A
  st    = status -sb
  ci    = commit
  cia   = commit -am
  ca    = commit --amend
  br    = branch
  co    = checkout
  df    = diff
  dfc   = diff --cached
  lg    = !git --no-pager log --pretty=format:'%C(yellow)%h%Creset %Cgreen(%><(12)%cr%><|(12))%Creset - %s %C(blue)<%an>%Creset' -10
  pl    = pull
  ps    = push
  undo  = reset --soft HEAD^
  count = !git shortlog -sne
  up    = !git checkout master && git pull && git checkout -
  purge = !git checkout master && git branch | grep -v "master" | xargs git branch -D
  amend = !git add -A && git commit --amend --no-edit
  files = diff --name-only origin/master
  bootstrap =!git add . && git commit -m "Bootstrap"

[color]
  diff   = auto
  status = auto
  branch = auto

[core]
  editor = vim
